<!doctype html>
%html
  %head
    %meta charset='utf-8'
    %title
      Dietwater File Hosting
    %link rel = 'stylesheet' type = 'text/css' href = "{{ url_for('static', filename='font-awesome/css/font-awesome.css')}}"
    %link rel = 'stylesheet' type = 'text/css' href = "{{ url_for('static', filename='css/dietwater.css') }}"
    %link rel = 'icon' type = 'image/png' href = "{{ url_for('static', filename='img/favico.png') }}"
  %body
    .gallery
      -for image in images:
        .thumb-box
          .thumb
            %a href = "/{{ image.unique_id }}"
              %img src = "{{url_for('uploaded_file', filename=image.unique_id + '_thumb.png')}}"
              .description 
                = image.title
              